/*Write a program to calculate the sum of all even numbers and sum of all odd
numbers, which are stored in an array of size 10. Take array values from the user.*/

#include <stdio.h>
int main(){
	int arr[10];
	int i;
	int sum_even=0;
	int sum_odd=0;
	for(i=0;i<10;i++)
	    {
	    // Input array elements from user
		printf("Enter the %d number :",i+1);
		scanf("%d",&arr[i]);
	    	// check even condition before storing
	    	if(arr[i]%2==0)
	    	{
		        sum_even+=arr[i];
		}
		else{
		    	sum_odd+=arr[i];
		}
	     }  	
printf("Sum of all the even numbers are %d\n",sum_even);
printf("Sum of all the odd numbers are %d\n",sum_odd);	
         return 0;
		}
